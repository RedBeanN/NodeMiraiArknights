{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist",
    "target": "ES2018",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "strict": false,
    "declaration": true
  },
  "include": ["src/**/*", "utils/**/*", "pngService/**/*", "root.ts"],
  "exclude": [
    "node_modules",
    "test"
  ]
}